{
  "name": "commentscreen",
  "productName": "CommentScreen",
  "copyright": "Copyright Â© 2019 Toshiki Tomihira",
  "version": "1.0.0",
  "description": "You can give a presentation while talking with the audience since their comments appear over your screen",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --mac --win",
    "dist-release": "electron-builder --win --mac --publish always"
  },
  "author": "Toshiki Tomihira",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "electron-log": "^3.0.5",
    "electron-store": "^3.2.0",
    "electron-updater": "^4.0.6",
    "oauth-electron-twitter": "^1.0.29",
    "socket.io-client": "^2.2.0",
    "twitter": "^1.7.1"
  },
  "build": {
    "appId": "com.electron.commentscreen",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github"
    }
  }
}
